{
  "name": "helsingborg-stad/api-schools-manager",
  "description": "Creates a api that may be used to manage schools",
  "type": "wordpress-plugin",
  "license": "MIT",
  "scripts": {
    "test": "XDEBUG_MODE=off ./vendor/bin/phpunit --testdox",
    "coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --testdox",
    "minimal": "./vendor/bin/phpunit",
    "setup-tests": "./tests/install-wp-tests.sh"
  },
  "authors": [
    {
      "name": "Thor Brink",
      "email": "thor.brink@helsingborg.se"
    },
    {
      "name": "Anna Johansson",
      "email": "anna.johansson4@helsingborg.se"
    }
  ],
  "autoload": {
    "psr-4": {
      "SchoolsManager\\": "source/php/"
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.0",
    "helsingborg-stad/acf-export-manager": ">=1.0.0",
    "firebase/php-jwt": "^6.4"
  },
  "require-dev": {
    "codedungeon/phpunit-result-printer": "^0.32.0",
    "yoast/phpunit-polyfills": "1.1"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "pivvenit/acf-pro-installer": true
    }
  }
}
